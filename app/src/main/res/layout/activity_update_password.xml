<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">
    <include layout="@layout/appbar" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputgmail"
        style="@style/TestInputTheme"
        app:hintTextAppearance="@style/TextAppearance"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Valid Email ID"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputoldpassword"
        style="@style/TestInputTheme"
        app:hintTextAppearance="@style/TextAppearance">

        <EditText
            android:id="@+id/oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Old Password"

            android:imeOptions="actionNext"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputnew_password"
        style="@style/TestInputTheme"
        app:hintTextAppearance="@style/TextAppearance">

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="New Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Update Password"
            android:layout_weight="2"
            android:id="@+id/bt_changepassword"

            android:layout_gravity="center_horizontal" />
    </LinearLayout>



</LinearLayout>