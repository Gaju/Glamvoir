<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@drawable/home_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_xlarge"
            android:layout_marginTop="@dimen/margin_top_xlarge"
            android:src="@drawable/alert" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical">

            <glamvoir.appzstack.glamvoir.customview.RoundedImageView
                android:id="@+id/circleView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_normal"
                android:text="@string/user_name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textsize_xlarge"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/member_period"
                android:textColor="#2a2a2a"
                android:textSize="@dimen/textsize_large"
                android:textStyle="normal"

                />
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            />


    </LinearLayout>

</LinearLayout>