<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_normal"
        android:weightSum="4">

        <glamvoir.appzstack.glamvoir.customview.RoundedImageView
            android:id="@+id/circleView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/camera"
            android:layout_marginLeft="@dimen/padding_top_normal"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_top_normal"
            android:layout_weight="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Jai Mishra"
                android:textColor="@android:color/black"
                android:id="@+id/textView25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hello , How are you ?"
                android:id="@+id/textView26" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_weight="1"
            android:text="20.08.2015"
            android:id="@+id/textView27" />


    </LinearLayout>
</LinearLayout>